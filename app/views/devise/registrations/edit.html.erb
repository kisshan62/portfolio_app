<div class="container">
  <h2>編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username, "名前", class: "form-label" %>
      <span class="badge bg-danger">必須</span>
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>

    <div class="field mt-3">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <span class="badge bg-danger">必須</span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field mt-3">
      <%= f.label :profile, "プロフィール", class: "form-label" %><br />
      <%= f.text_area :profile, class: "form-control-high" %>
    </div>

    <div class="field mt-3">
      <%= f.label :current_password, "パスワード", class: "form-label" %>
      <span class="badge bg-danger">必須</span>
      <i>(変更を反映するにはパスワードの入力が必要です。)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <%= f.submit "登録", class: "btn btn-primary-black mt-3" %>
  <% end %>

  <div class="mt-5">
    <h3>アカウントの消去</h3>
  </div>

  <div class="mt-3">
    <%= button_to "アカウント消去", registration_path(resource_name), data: { confirm: "本当に削除してもよろしいですか？" }, method: :delete %>
  </div>

  <div class="mt-3">
    <%= link_to "戻る", :back %>
  </div>
</div>