<% if current_user == @user %>
  <% provide :title, "マイページ" %>
<% else %>
  <% provide :title, @user.username %>
<% end %>


<div class="container">
  <% if current_user == @user %>
    <h2>マイページ（<%= @user.username %>）</h2>
  <% else %>
    <h2><%= @user.username %>のページ</h2>
  <% end %>

  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar %>
  <% else %>
    <%= image_tag "kkrn_icon_user_14.png" %>
  <% end %>
  
  <%= render 'follow_stats' %>
  <% unless current_user?(@user) %>
    <%= render 'follow_form' %>
  <% end %>
  <div class="profile">
    <div class="card mt-2">
      <%= @user.profile %>
    </div>
  </div>
  <div class="mt-3">
    <% if current_user == @user %>
      <% if guestuser? %>
        <%= link_to "新規投稿", "#", {class: "btn btn-large btn-primary-black"} %>
        <div><%= guestuser_phrase %> </div>
      <% else %>
        <%= link_to "新規投稿", new_goal_path, {class: "btn btn-large btn-primary-black"} %>
      <% end %>
    <% end %>
  </div>
</div>


<div class="container">
  <% if current_user == @user %>
    <div class="container mt-3">
      <div class="row">
        <div class="col-sm-7">
          <% if @user.goals.count == 0 %>
            <h2>目標を投稿しましょう</h2>
          <% else %>
            <h2>目標一覧</h2>
            <div class="row">
              <div class="col">
                <h6><%= link_to "すべて", @user, remote: true, class: "all_mygoals" %></h6>
              </div>
              <div class="col">
                <h6><%= link_to "継続中", @user, remote: true, class: "undone" %></h6>
              </div>
              <div class="col">
                <h6><%= link_to "完了", @user, remote: true, class: "done" %></h6>
              </div>
            </div>
            <div id="mygoals">
              <%= render partial: 'goals/goal_each', collection: @goals, as: :goal %>
            </div>
          <% end %>
        </div>
        <div class="col-sm-5">
          <% if @following_goals.count == 0 %>
            <h2>followingの投稿がありません。検索してuserをfollowしましょう。</h2>
          <% else %>
            <h2>フォロワーの目標一覧<h2>
            <div class="row">
              <div class="col">
                <h6>すべて</h6>
              </div>
            <div id="following_goals">
              <%= render partial: 'goals/goal_each', collection: @following_goals.order("created_at DESC"), as: :goal %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="container mt-3">
      <% if @user.goals.count == 0 %>
        <h2>goalが投稿されていません。</h2>
      <% else %>
        <%= render partial: 'goals/goal_each', collection: @goals, as: :goal %>
      <% end %>
    </div>
  <% end %>
</div>