<% provide(:title, "Goals#show") %>

<div class="container">
  <h2><%= link_to @goal.user.username, user_path(@goal.user) %><h2>

  <%= render partial:'goal_each', locals: { goal: @goal } %>

  <% if current_user == @goal.user %>
    <%= render 'goal_button' %>
  <% end %>

  <div class="mt-5">
    <%= render 'comment_form' %>
  </div>

  <div class="mt-4">
    <h3>コメント一覧</h3>
    <table class="table mt-3 small">
      <thead>
        <tr>
          <th>ユーザ名</th>
          <th>内容</th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= link_to comment.user.username, user_path(comment.user_id) %></td>
            <td><%= comment.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>