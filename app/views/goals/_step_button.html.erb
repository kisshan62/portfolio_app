<div class="container">
  <%= link_to "Edit", edit_goal_path(step.goal_id), {class: "btn btn-large btn-primary"} %>
  <%= link_to "Delete", goal_step_path(step.goal_id, step), method: :delete, class: "btn btn-large btn-primary" %>
  <% if step.done == false %>  
      <%= link_to "Done", done_goal_step_path(step.goal_id, step), method: :patch, class: "btn btn-large btn-primary" %>
  <% else %>
      <%= link_to "Undone", undone_goal_step_path(step.goal_id, step), method: :patch, class: "btn btn-large btn-primary" %>
  <% end %>
</div>