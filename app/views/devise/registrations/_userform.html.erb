<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-3">
    <%= f.label :username, "名前", class: "form-label" %>
    <span class="badge bg-danger">必須</span>
    <%= f.text_field :username, autofocus: true, class: "form-control" %>
  </div>

  <div class="field mt-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <span class="badge bg-danger">必須</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password, "パスワード", class: "form-label" %>
    <span class="badge bg-danger">必須</span>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation, "確認用パスワード", class: "form-label" %>
    <span class="badge bg-danger">必須</span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
  </div>

  <div class="field mt-3">
    <%= f.label :profile, "プロフィール", class: "form-label" %><br />
    <%= f.text_area :profile, class: "form-control-high" %>
  </div>

  <%= f.submit "登録", class: "btn btn-primary-black mt-3" %>
<% end %>