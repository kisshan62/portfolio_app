<% provide(:title, "Goals#show") %>

<h2><%= link_to @goal.user.email, user_path(@goal.user) %><h2>

<%= render partial:'goal_each', locals: { goal: @goal } %>

<% if current_user == @goal.user %>
  <%= render 'goal_button' %>
<% end %>

<div class="container mt-5"></div>

<%= render 'comment_form' %>

<div>コメント一覧</div>
<table class="table">
  <thead>
    <tr>
      <th>username</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.user.username, user_path(comment.user_id) %></td>
        <td><%= comment.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>