<h2 class="mt-3">コメント新規投稿</h2>

<div class="container">
<%= form_with(model: @comment, url: comments_path ) do |f| %>
  <div class=field>
    <%= f.text_field :content %><br>
    <%= f.hidden_field :goal_id, value: @goal.id %>
    <% @goal.errors.full_messages_for(:content).each do |m| %>
      <div><%= m %></div>
    <% end %>
  </div>

  <div class="mt-2">
    <%= f.submit name="投稿", class: "btn btn-large btn-primary-black" %>
  </div>
<% end %>
</div>