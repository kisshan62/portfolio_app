<h1>Goals#show</h1>
<h2><%= link_to @goal.user.email, user_path(@goal.user) %><h2>

<h2>my_goal<h2>
  <ul "list-group">
      <li class="list-group-item">title:<%= link_to @goal.title, goal_path %></li>
      <li class="list-group-item">description:<%= @goal.description %></li>
      <li class="list-group-item"><%= link_to "Edit", edit_goal_path(@goal) %></li>
      <li class="list-group-item"><%= link_to "Delete", goal_path(@goal), method: :delete %></li>
  </ul>

<%= render 'comment_form' %>

<div>コメント一覧</div>
<table class="table">
  <thead>
    <tr>
      <th>username</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.user.username, user_path(comment.user_id) %></td>
        <td><%= comment.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>