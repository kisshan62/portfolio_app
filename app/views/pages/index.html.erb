<h1>Pages#index</h1>
<p>Find me in app/views/pages/index.html.erb</p>

<%= link_to "新規投稿", new_goal_path %>

<h2>目標一覧<h2>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= link_to goal.id, goal_path(goal.id) %></td>
        <td><%= goal.title %></td>
        <td><%= goal.description %></td>
        <td><%= link_to "edit", edit_goal_path(goal.id) %></td>
        <td><%= link_to "Delete", goal_path(goal.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>